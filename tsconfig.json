{
  "compilerOptions": {
    "baseUrl": "src",
    "declarationDir": "lib",
    "declaration": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "esnext"
    ],
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "outDir": "lib",
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "preserveSymlinks": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "strictNullChecks": true
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}